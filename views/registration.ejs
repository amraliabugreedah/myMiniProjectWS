<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Registration</title>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
    <!-- <script type="text/javascript" src="jquery-1.8.3.js"></script> -->
    <!-- <script src="./myJQueryScripts.js"></script> -->
  </head>
  <body>
    <br>
<div class="container">
     <form class="" id="registrationForm" action="/registerUser" method="post">
       <div class="row">
           <div class="col-xs-1">
               <label for="usernameLabel">username</label>
             </div>
                 <div class="col-xs-11">
               <input type="text" name="usernameTextfield" placeholder="username">
            </div>
       </div>
       <br>
       <div class="row">
          <div class="col-xs-1">
              <label for="password" id = "passwordLabel">password</label>
            </div>
          <div class="col-xs-11">
                  <input type="password" id = "password" name="password" placeholder="password">
          </div>
       </div>
       <br>
       <div class="row">
                 <div class="col-xs-1">
                   <label for="passwordVerification" id = "passwordVerificationLabel">verify password</label>
                 </div>
                <div class="col-xs-11">
                   <input type="password" id = "passwordVerification" name="passwordVerification" placeholder="verify password">
                </div>
       </div>
       <br>
       <div class="row">
                 <div class="col-xs-1">
                   <input type="radio" name="typeOfUser" value="student" checked = "checked"> Student
                 </div>
                <div class="col-xs-11">
                   <input type="radio" name="typeOfUser" value="client"> Client
                 </div>
         <!-- <label for="profilePicture">profile picture</label> -->
         <!-- <input type="file" name="image" placeholder="image"> -->
       </div>
       <br>
       <div>
         <button type="button" name="button" onclick="registrationSubmission()">Register</button>

       </div>

     </form>
</div>

<script type="text/javascript">
      function registrationSubmission(){
        var passLabel = document.getElementById("passwordLabel");
        var passVLabel = document.getElementById("passwordVerificationLabel");

        var pass = document.getElementById("password");
        var passV = document.getElementById("passwordVerification");

          document.getElementById("registrationForm").submit();
          if (pass.value != passV.value){

              passLabel.style.color = "red";
              passVLabel.style.color = "red";

          }
      }
</script>

  </body>
</html>
